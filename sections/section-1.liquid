
  <style>
    .awesome-sale {
      width: 100%;
      background-repeat: no-repeat;
      background-position: center;
      padding: 60px 0;
    }
    .awesome-sale__container {
      margin: 0 auto;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .awesome-sale__inner {
      background: rgba(255, 255, 255, 0.44);
      border-radius: 5px;
      border: 1px solid rgba(230, 230, 230, 1);
      text-align: center;
      padding: 40px;
      width: 100%;
    }
    .awesome-sale__title {
      font-size: 48px;
      font-weight: 600;
      margin-bottom: 20px;
    }
    .awesome-sale__subheading {
          font-size: 24px;
    margin-bottom: 47px;
    margin-top: 25px;
    }
    .awesome-sale__highlight {
      color: {{ section.settings.highlight_color }};
      font-weight: 700;
      font-style: italic;
    }
    .awesome-sale__regular {
      font-weight: 400;
      margin-left: 6px;
    }
    .awesome-sale__buttons {
      display: flex;
      flex-direction: column;
      gap: 12px;
      align-items: center;
      margin-bottom: 10px;
    }
   
    .sec1-btn {
      display: inline-block;
      max-width: 407px;
      width: 100%;
      padding: 19px 23px;
      text-align: center;
      text-decoration: none;
      border-radius: 5px;
      background: rgba(193, 155, 97, 1);
      color: #fff;
      font-weight: 600;
      font-size: 22px;
      transition: all 0.3s ease;
      border: 1px solid rgba(238, 238, 238, 1);
    }

    .sec1-btn:hover {
      border-color: rgba(193, 155, 97, 1);
      background: transparent;
      color: rgba(193, 155, 97, 1);
    }
   
    .btn--paypal {
    background: #ffc439;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    max-width: 407px;
    width: 100%;
    padding: 19px 23px;
    border-radius: 5px;
    justify-content: center;
    font-size: 18px;
    font-weight: 600;
    color: #fff;
    text-decoration: none;
}
    .paypal-logo {
      height: 20px;
      width:auto;
    }
    .afterpay-section p {
      font-size: 14px;
      margin-top: 12px;
      color: rgba(51, 51, 51, 1);
    }
  .afterpay-logo {
    height: 30px;
    vertical-align: middle;
    margin-left: 4px;
    width: auto;
    display: inline;
}
    .awesome-sale__separator {
      margin: 20px auto;
    }
    .awesome-sale__note {
      font-size: 16px;
      font-weight: 600;
      color: rgba(51, 51, 51, 1);
      margin-bottom: 10px;
    }
    .countdown {
      display: flex;
      justify-content: center;
      gap: 12px;
    }
    .countdown-item {
      background: rgba(0, 0, 0, 0.59);
      border-radius: 5px;
      padding: 8px 6px;
      color: #fff;
      text-align: center;
      min-width: 60px;
    }
    .countdown-item .count {
      font-size: 24px;
      font-weight: 700;
      display: block;
      margin-bottom: -5px;
    }
    .countdown-item .label {
      font-size: 10px;
      font-weight: 500;
    }
  </style>


<section class="awesome-sale" style="background-image: url({{ section.settings.bg_image | image_url: width: 2000 }}); background-size: cover; background-position: center;">
  <div class="awesome-sale__container" style="max-width: {{ section.settings.content_width }}px;">
    <div class="awesome-sale__inner">
      <h1 class="awesome-sale__title">AWESOME!</h1>

      <h2 class="awesome-sale__subheading">
        <span class="awesome-sale__highlight">{{ section.settings.subheading_part1 }}</span>
        <span class="awesome-sale__regular">{{ section.settings.subheading_part2 }}</span>
      </h2>

      <div class="awesome-sale__buttons">
        <a href="{{ section.settings.button_url }}" class="sec1-btn">{{ section.settings.button_text }}</a>
        <a href="{{ section.settings.paypal_url }}" class="btn btn--paypal">
          {{ section.settings.paypal_text }}
          <img src="{{ section.settings.pp | image_url }}" alt="PayPal" class="paypal-logo">
        </a>
      </div>

      <div class="afterpay-section">
        <p>{{ section.settings.afterpay_text }}
          <img src="{{ section.settings.ap | image_url }}" alt="AfterPay" class="afterpay-logo">
        </p>
      </div>

      <div class="awesome-sale__separator">
        <svg width="56" height="2" viewBox="0 0 56 2" fill="none" xmlns="http://www.w3.org/2000/svg">
          <line x1="0.0800781" y1="1.375" x2="55.9199" y2="1.375" stroke="#D3D3D3"/>
        </svg>
      </div>

      <p class="awesome-sale__note">{{ section.settings.end_text }}</p>

      <div class="countdown" data-end="{{ section.settings.countdown_end }}" data-timezone="{{ section.settings.timezone }}">
        <div class="countdown-item"><span class="count">00</span><span class="label">Days</span></div>
        <div class="countdown-item"><span class="count">00</span><span class="label">Hours</span></div>
        <div class="countdown-item"><span class="count">00</span><span class="label">Minutes</span></div>
        <div class="countdown-item"><span class="count">00</span><span class="label">Seconds</span></div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const countdown = document.querySelector('.countdown');
      if (!countdown) return;

      const endDate = new Date(countdown.dataset.end);
      function updateCountdown() {
        const now = new Date();
        const diff = endDate - now;

        if (diff <= 0) {
          countdown.innerHTML = "<p>Sale Ended</p>";
          clearInterval(interval);
          return;
        }

        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
        const minutes = Math.floor((diff / (1000 * 60)) % 60);
        const seconds = Math.floor((diff / 1000) % 60);

        const counts = countdown.querySelectorAll('.count');
        counts[0].textContent = days.toString().padStart(2, '0');
        counts[1].textContent = hours.toString().padStart(2, '0');
        counts[2].textContent = minutes.toString().padStart(2, '0');
        counts[3].textContent = seconds.toString().padStart(2, '0');
      }

      updateCountdown();
      const interval = setInterval(updateCountdown, 1000);
    });
  </script>
</section>

